#!/bin/bash

# Get the C file name from the command line argument
CFILE="$1"

# Generate the assembly code using gcc
gcc -S -masm=intel "$CFILE"

# Extract the base file name (without extension) from the C file name
BASENAME="$(basename "$CFILE" .c)"

# Rename the output file with the same base name but a .s extension
mv "$BASENAME.s" "$BASENAME"

echo "Assembly code saved in $BASENAME.s"

